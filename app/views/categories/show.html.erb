
<div class="container">


<div class="row d-flex justify-content-center">
  <h1> <%=@categorie.name %></h1>
</div>

<div class="row mt-3">
  <div class="article-list">
  <% @articles.each do |article|%>
    <div class="card-product">
      <%= link_to article_path(article) do %>
        <%= cl_image_tag article.avatar.key, crop: :scale, class:'zoom' if article.avatar.attached? %>
      <%end %>
      <div class="card-product-infos">
        <h2> <%= link_to article.name, article_path(article) %></h2>
        <div class="mt-2 d-inline-flex">
          <% unless article.oldprice.nil?%>
          <div class="mr-2">
            <p><del><%=article.oldprice.to_s.sub(/\.?0+$/, '') %> €</del></p>
          </div>
          <% end %>
          <p><%=article.price.to_s.sub(/\.?0+$/, '')%> €</p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

</div>
