<%= form_for @contact, url: contacts_path, remote: true do |f| %>
        <%= f.text_field  :name, required: true, class: "contact-form-text-area", placeholder: "nom" %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area", placeholder: "email"%></br>
      <%= f.label :message %></br>
      <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area ",
                        placeholder: "Ecris ton message"%></br>
      <%= f.submit 'Envoyer', class: 'btn btn-primary js-btn-submit'%>
  <% end %>

